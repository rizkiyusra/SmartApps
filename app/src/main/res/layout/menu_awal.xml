<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/rumah_sakit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1.1"
            android:onClick="clickRs"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/polisi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1.1"
            app:srcCompat="@drawable/policeman" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/sekolah"
            android:layout_weight="1.1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/school" />

        <ImageView
            android:id="@+id/super_market"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1.1"
            app:srcCompat="@drawable/troli" />
    </TableRow>
</LinearLayout>